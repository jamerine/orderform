<div class="account-header">
  <div class="d-flex justify-content-start">
      <div class="col-1 p-2 offset-1">
        <%= image_tag(account.logo_url(:thumb), class: 'd-flex align-self-center header-logo-image' )%>
      </div>
      <div class="col-3 p-3">
        <h1><%= account.business_name %></h1>
        <h3 class="text-muted">Spring Bulk 2017</h3>
      </div>
      <div class="col-3 ml-auto p-3">
        <%= link_to "View Cart", cart_path(order_id: order), class: 'cart-image' %>
        <%= link_to '', cart_path(order_id: order), class: 'fa fa-shopping-cart fa-3x fa-fw cart-image' %>
        <%= number_to_currency(order.subtotal) %>
      </div>
  </div>
</div>

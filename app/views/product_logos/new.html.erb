<div class="container">
  <div class="row">
    <div class="col-md-4">
      <br>
      <%= link_to 'Back', @account, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class='col-md-8'>
      <div class="card">
        <div class="card-header">
          Add Product Logo
        </div>
        <div class="card-block">
          <%= form_for @product_logo, {multipart: true} do |f| %>
            <div class="row">
              <%= f.hidden_field :account_id, value: "#{@account.id}" %>

              <div class="form-group col-4">
                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true, class: 'form-control', id: "example" %>
              </div>

              <div class="form-group col-6">
                <%= f.label :product_logo_image %>
                <%= f.file_field :product_logo_image, class: 'form-control'  %>
              </div>

              <div class="actions col-1">
                <%= f.submit "Add", class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'layouts/header', locals: { account: @account, order: @order } %>
<br>
<div class="container">
  <p class="text-center">Select a product!</p>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col col-4">
        <div class="card">
            <div class="row">
              <div class="col col-9">
                <p><%= product.name %></p>
              </div>
              <div class="col col-3">
                <p><%= number_to_currency(product.sizes.first.price) %></p>
              </div>
          </div>
          <div class="card-block">
              <%= image_tag(product.colors.first.color_sample_url(:thumb), class: 'mx-auto d-block' )%>
              <%= link_to 'Add To Cart', new_account_order_order_item_path(account_id: @account.id, order_id: @order.id, id: product.id), class: 'btn btn-primary float-right' %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Hex Color</th>
        <th>View Sample</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% product.colors.find_each.with_index do |color, index| %>
      <tr>
        <td> <%= index + 1 %></td>
        <td> <%= color.name %></td>
        <td> <%= color.hex_color %></td>
        <td> <%= link_to 'View Sample', color.color_sample_url, target: '_blank' %></td>
        <td> <%= link_to 'Remove', account_product_color_path(id: color.id, product_id: product.id, account_id: product.account_id), method: :delete %> </td>
      </tr>
      <% end %>
      <tr>

      </tr>
    </tbody>
  </table>
</div>

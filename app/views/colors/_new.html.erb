  <%= form_for color, {multipart: true, remote: true} do |f| %>
    <div class="row">
      <%= f.hidden_field :product_id, value: "#{@product.id}" %>

      <div class="form-group col-5">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', id: "example" %>
      </div>

      <div class="form-group col-5">
        <%= f.label :hex_color %>
        <%= f.text_field :hex_color, class: 'form-control'  %>
      </div>


      <div class="actions col-2">
        <p></p>
        <%= f.submit "Add", class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  <% end %>

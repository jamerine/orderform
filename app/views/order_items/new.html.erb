<div class="container account-header">
  <div class="d-flex justify-content-start">
      <div class="col-2 p-2">
        <%= image_tag(@account.logo_url(:thumb), class: 'd-flex align-self-center' )%>
      </div>
      <div class="col-3 p-3">
        <h1><%= @account.business_name %></h1>
        <h3 class="text-muted">Spring Bulk 2017</h3>
      </div>

  </div>
</div>
<div class="container">
  <%= link_to 'Return to Order', account_order_path(@account, @order), class: 'btn btn-outline-secondary add-to-cart-button' %>
  </div>
  <div class="container">

      <div class="row justify-content-md-center new-order-item">
          <div class="col col-6">
            <%= form_for [@account, @order, @order_item] do |f| %>
            <div class="media">
              <% if @product.colors.empty? %>
                <p>No Image Available</p>
              <% else %>
                <%= image_tag(@product.colors.first.color_sample_url(:thumb), class: 'd-flex align-self-center new-order-item-image' )%>
              <% end %>
                <div class="media-body">
                  <p class="new-order-item-header"><b><%= @product.name %>: <%= number_to_currency(@product.sizes.first.price) %></b></p>
                  <p>Description: <%= @product.description %></p>
                  <p>Style Number: <%= @product.style_number %></p>
                  <p>Item Number: <%= @product.item_number %></p>
                  <br>
                  <%= f.hidden_field :product_id, value: "#{@product.id}" %>
                  <%= f.hidden_field :order_id, value: "#{@account.id}" %>
                  <div class="form-group">
                    <%= f.label 'Color' %>
                    <%= f.select(:color_id, options_from_collection_for_select(@colors, :id, :name)) %>
                  </div>
                  <div class="form-group">
                    <%= f.label 'Size' %>
                    <%= f.select(:size_id, options_from_collection_for_select(@sizes, :id, :name_with_price)) %>
                  </div>
                    <div class="form-group quantity-field">
                      <%= f.label 'quantity' %>
                      <%= f.number_field :quantity, class: 'form-control', required: true %>
                    </div>
                      <div class="actions">
                    <%= f.submit "Add To Cart", class: 'btn add-to-cart-button' %>
                    </div>
                  <br>
                </div>
              </div>
              <% end %>
            </div>
        </div>
    </div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <br>
      <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
  <br>
  <div class="row justify-content-md-center">
    <div class="col col-4">
      <h3 class="text-center">All Accounts</h3>
    </div>
  </div>
  <% if current_user %>
    <div class="row">
        <%= link_to 'Add Account', new_account_path, class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>
  <div class="row">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Business Name</th>
        <th>Domain</th>
        <th>Email</th>
        <th>Phone Number</th>

      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |a| %>
      <tr>
        <th scope="row"> <%= link_to 'view', account_path(a),  class: 'btn btn-outline-secondary btn-sm' %> </th>
        <td><%= a.business_name %></td>
        <td><%= a.subdomain %></td>
        <td><%= a.email_address %></td>
        <td><%= a.phone_number %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
